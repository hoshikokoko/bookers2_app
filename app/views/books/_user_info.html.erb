    <div class="col-md-3">
      <h2>User info</h1>
      <%= image_tag current_user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <%= link_to edit_user_path(current_user), class: 'btn btn-outline-secondary btn-block' do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
      <h2>New book</h2>
        <%= form_with model: book do |f| %>
        <div class= "book-form">
          <div class= "mt-3">
            <label class="form-label">Title</label>
            <%= f.text_field :title %>
           </div>
          <div class= "mt-3">
            <label class="form-label">Opinion</label>
            <%= f.text_area :body %>
          </div>
          <div class= "mt-3"><%= f.submit 'Create Book', class: 'btn btn-success' %></div>
        </div>
        <% end %>
    </div>