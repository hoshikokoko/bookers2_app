<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-1 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <div class= "book-form">
          <div class= "mt-3">
            <label class="form-label">Title</label>
            <%= f.text_field :title, class: 'form-control' %>
           </div>
          <div class= "mt-3">
            <label class="form-label">Opinion</label>
            <%= f.text_area :body, class: 'form-control' %>
          </div>
          <div class= "mt-3"><%= f.submit 'Update Book', class: 'btn btn-success' %></div>
        </div>
      <% end %>
      <div><%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path%></div>
    </div>
  </div>
</div>