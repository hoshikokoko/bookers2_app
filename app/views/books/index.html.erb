<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h1>
      <%= image_tag current_user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <%= link_to "プロフィール編集", edit_user_path(current_user) %>
      <h2>New book</h2>
      <form>
        <%= form_with model: @book do |f| %>
        <div class= "book-form mt">
          <div class= "mt-3">
            <label for="formGroupExampleInput" class="form-label">Title</label>
            <%= f.text_field :title %>
           </div>
          <div class= "mt-3">
            <label for="formGroupExampleInput" class="form-label">Opinion</label>
            <%= f.text_area :body %>
          </div>
          <div class= "mt-2"><%= f.submit 'Create Book', class: 'btn btn-success' %></div>
        </div>
        <% end %>
      </form>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
          
        </tbody>
      </table>
    </div>
  </div>
</div>