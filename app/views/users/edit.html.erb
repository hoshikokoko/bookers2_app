<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-1 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @user do |f| %>
        <div class= "book-form">
          <div class= "mt-3">
            <label class="form-label">Name</label>
            <%= f.text_field :name, class: 'form-control' %>
           </div>
          <div class= "mt-3">
            <label class="form-label">Introduction</label>
            <%= f.text_area :introduction, class: 'form-control' %>
          </div>
          <div class= "mt-3"><%= f.submit 'Update User', class: 'btn btn-secondary' %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>