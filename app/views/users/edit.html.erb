<div class="container">
    <div>
      <% if @user.errors.any? %>
      <div class= "error-title"><%= @user.errors.count %>errors prohibited this book from being saved</div>
       <ul class= "error-messages" >
        <% @user.errors.full_messages.each do |message|%>
         <li class= "error-message"><%= message %></li>
        <% end %>
       </ul>
      <% end %>
    </div>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-1 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @user do |f| %>
        <div class= "book-form">
          <div class= "mt-3">
            <label class="form-label">Name</label>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class= "book-form">
            <label for="exampleFormControlFile1">Image</label>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
          <div class= "mt-3">
            <label class="form-label">Introduction</label>
            <%= f.text_area :introduction, class: 'form-control' %>
          </div>
          <div class= "mt-3"><%= f.submit 'Update User', class: 'btn btn-secondary' %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>